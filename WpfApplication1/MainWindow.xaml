<Window
    x:Class="WpfApplicationListViewImage.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="clr-namespace:WpfApplicationListViewImage.Classes"
    Title="ListView images"
    Width="273"
    Height="136"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <classes:SampleModel />
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate x:Key="Template" DataType="classes:ViewData">
            <StackPanel Orientation="Horizontal">

                <Image
                    Width="16"
                    Height="16"
                    Source="{Binding Path=Icon, Converter={StaticResource Converter}}" />

                <TextBlock
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <DockPanel Width="Auto" Height="Auto">

        <ListView
            Height="100"
            ItemTemplate="{StaticResource Template}"
            ItemsSource="{Binding Items}" />

    </DockPanel>
</Window>
